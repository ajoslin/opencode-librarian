{
  "name": "opencode-librarian",
  "version": "0.2.0",
  "description": "OpenCode plugin that adds a Librarian subagent for remote code research",
  "author": "OpenCode",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencode-ai/opencode-librarian"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.162",
    "@opencode-ai/sdk": "^1.0.162"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.7.3"
  },
  "license": "MIT"
}
